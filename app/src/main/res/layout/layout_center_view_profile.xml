<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey">

        <RelativeLayout
            android:id="@+id/relLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/linLayout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="100">


                <RelativeLayout
                    android:id="@+id/ddd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_weight="25">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="0dp"
                        android:layout_marginTop="5dp"
                        />


                </RelativeLayout>

                <TextView
                    android:id="@+id/display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:text="Rami Alshalabi"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:text="rami_2017y"
                    android:textColor="@color/grey2"
                    android:textSize="16sp"
                    android:layout_below="@+id/display_name"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linLayout"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="75">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        >

                        <TextView
                            android:id="@+id/tvPosts1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="300"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="15dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />

                        <TextView
                            android:id="@+id/textFollolwing2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Following"
                            android:textSize="12sp"
                            app:layout_constraintRight_toLeftOf="@+id/textPosts"
                            android:layout_marginRight="67dp"
                            android:layout_marginTop="0dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvPosts"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="0dp" />


                        <TextView
                            android:id="@+id/tvFollowing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="250"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginBottom="-1dp"
                            app:layout_constraintBottom_toTopOf="@+id/textPosts"
                            android:layout_marginLeft="34dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="0dp"
                            app:layout_constraintVertical_bias="1.0" />


                        <TextView
                            android:id="@+id/textPosts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posts"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="0dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />

                        <TextView
                            android:id="@+id/tvFollowers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="400"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintLeft_toRightOf="@+id/tvFollowing"
                            android:layout_marginLeft="192dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/textFollowers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:textSize="12sp"
                            app:layout_constraintLeft_toRightOf="@+id/textPosts"
                            android:layout_marginLeft="69dp"
                            android:layout_marginTop="0dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvFollowers" />

                    </android.support.constraint.ConstraintLayout>
                    <TextView
                        android:id="@+id/textFollolwing"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:text="Following"
                        android:textColor="@color/grey2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:background="@drawable/myprofil2"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginEnd="14dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:id="@+id/follow"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:text="Follow"
                        android:textColor="@color/grey2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:background="@drawable/follow_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginEnd="14dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:id="@+id/unfollow"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:text="Unfollow"
                        android:textColor="@color/grey2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:background="@drawable/unfollow_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginEnd="14dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/textEditProfile"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:text="Edit profile"
                        android:textColor="@color/grey2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:background="@drawable/myprofil2"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginEnd="14dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linLayout2"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/shado3">


                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="1dp"
                    android:text="I live in Egypt"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="https://codingwithmitch.com"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_below="@+id/relLayout2"
            android:background="@color/white">

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:horizontalSpacing="1.5dp"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1.5dp">


            </GridView>


        </RelativeLayout>

    </RelativeLayout>


</merge>