<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/comment_profile_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/background"
        app:civ_border_color="@color/black"
        app:civ_border_width="0.2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout1"
        android:layout_toRightOf="@+id/comment_profile_image"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/comment_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rami"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rami"
                android:id="@+id/comment_username"
                android:layout_marginLeft="5dp"
                android:textColor="@color/grey2"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/comment_display_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is a comment"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/comment"
                android:layout_below="@+id/comment_display_name"/>

///////////////////////////////////////////////////////
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/comment_like"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/comment"
                android:src="@drawable/heart"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 likes"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:id="@+id/comment_likes"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/comment"
                android:layout_toRightOf="@+id/comment_like"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:id="@+id/comment_reply"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/comment"
                android:layout_toRightOf="@+id/comment_likes"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 d"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:id="@+id/comment_time_posted"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/comment"
                android:layout_toRightOf="@+id/comment_reply"

                />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>